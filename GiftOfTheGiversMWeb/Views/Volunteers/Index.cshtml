@model IEnumerable<GiftOfTheGiversMWeb.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteer Contributions";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
        <h2 class="text-success fw-bold mt-5">Contributions Dashboard</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm px-4 mt-5">+ Register as Volunteer</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary text-center p-4 shadow-sm mt-5">
            <h5 class="mb-0">No volunteer contributions found yet.</h5>
            <p class="text-muted">Be the first to make a difference!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4 mt-5">
                    <div class="card shadow-sm border-0 rounded-3 h-100">
                        <div class="card-body bg-light">
                            <h5 class="card-title text-success fw-bold">@item.Project.Title</h5>
                            <p class="card-text text-muted mb-1">
                                <strong>Signed up:</strong> @item.SignupDate.ToShortDateString()
                            </p>
                            <p class="card-text text-muted mb-1">
                                <strong> Volunteer:</strong> @item.User.Email
                            </p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.VolunteerId" class="btn btn-outline-secondary btn-sm">🔍 Details</a>
                            <a asp-action="Delete" asp-route-id="@item.VolunteerId" class="btn btn-outline-danger btn-sm">🗑 Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn-success {
        border-radius: 8px;
    }

    .btn-outline-success, .btn-outline-secondary, .btn-outline-danger {
        border-radius: 6px;
    }
</style>
