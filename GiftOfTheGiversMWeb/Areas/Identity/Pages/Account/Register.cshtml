@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #121212; /* Dark background */
        color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-card {
        background: #1e1e1e;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
    }

        .register-card h2 {
            color: #28a745;
            font-weight: 600;
            margin-bottom: 1rem;
        }

    .form-floating label {
        color: #bbb;
    }

    .form-control {
        background: #2a2a2a;
        border: 1px solid #333;
        color: #fff;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
            background: #2a2a2a;
            color: #fff;
        }

    .btn-ngo {
        background-color: #28a745;
        border: none;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 12px;
        border-radius: 8px;
        transition: 0.3s;
        width: 100%;
    }

        .btn-ngo:hover {
            background-color: #7fc534;
            transform: translateY(-2px);
        }

    a {
        color: #28a745;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-5">
        <div class="register-card">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center">Create Your Account</h2>
                <p class="text-center text-muted mb-4">Join our mission today</p>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid mb-3">
                    <button id="registerSubmit" type="submit" class="btn btn-ngo">Register</button>
                </div>
            </form>

            <hr class="text-muted" />

            <section>
                <h5 class="text-center text-light">Or register with</h5>
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-muted text-center">
                        No external authentication services configured.
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-light" name="provider" value="@provider.Name"
                                        title="Register using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
